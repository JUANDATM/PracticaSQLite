<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="214dp"
            android:layout_height="41dp"
            android:inputType="numberSigned"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/etControl"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="96dp" android:hint="No Control"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.218"/>
    <EditText
            android:layout_width="282dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/etNombre" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/etControl" android:hint="Nombre Estudiante"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.333"/>
    <EditText
            android:layout_width="281dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/etCarrera" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/etNombre" android:hint="Carrera" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.33"/>
    <EditText
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/etEdad"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="308dp"
            android:hint="Eddad" android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="45dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etCarrera"/>
    <Button
            android:text="Buscar"
            android:layout_width="104dp"
            android:layout_height="43dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/btnBuscar" android:layout_marginStart="34dp"
            app:layout_constraintStart_toEndOf="@+id/etControl" android:layout_marginTop="94dp"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="buscarEstudiante"/>
    <Button
            android:text="Agregar"
            android:layout_width="93dp"
            android:layout_height="38dp"
            android:id="@+id/btnAgregar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="184dp"
            android:onClick="agregarEstudiante"/>
    <Button
            android:text="Modificar"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:id="@+id/btnModificar"
            android:layout_marginBottom="184dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:onClick="modificarEstudiante" android:enabled="false"/>
    <Button
            android:text="Eliminar"
            android:layout_width="93dp"
            android:layout_height="37dp" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/btnEliminar"
            android:layout_marginBottom="184dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="eliminarEstudiante" android:enabled="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>